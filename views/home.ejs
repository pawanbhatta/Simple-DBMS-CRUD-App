
    <div class="container">
        <h1>This is home page</h1>
        
    </div>

    <form action="/" method="POST">
        <div class="form-group">
            <label for="firstname">Firstname</label>
            <input type="text" id="firstname" name="firstname" class="form-control" placeholder="Enter Firstname" />
            <label for="lastname">Lastname</label>
            <input type="text" id="lastname" name="lastname" class="form-control" placeholder="Enter Lastname" />
            <label for="empcode">Emp Code</label>
            <input type="text" id="empcode" name="empCode" class="form-control" placeholder="Enter empcode" />
            <label for="salary">Salary</label>
            <input type="text" id="salary" name="salary" class="form-control" placeholder="Enter Salary" />
            <label for="address">Address</label>
            <input type="text" id="address" name="address" class="form-control" placeholder="Enter Address" />
        </div>
        <input type="submit" value="Save">
    </form>

    <table>
    <thead>
    <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Emp Code</th>
    <th>Salary</th>
    <th>Address</th>
    <th>Actions</th>
    </tr>
    </thead>
    <% employees.forEach(function(employee){ %>
    <tbody>
    <td><%= employee.firstname %></td>
    <td><%= employee.lastname %></td>
    <td><%= employee.empCode %></td>
    <td><%= employee.salary %></td>
    <td><%= employee.address %></td>
    <td><a href='/edit/<%= employee._id %>'>Edit</a> | <a href='/delete/<%= employee._id %>'>Delete</a></td>
    </tbody>
    <% }) %>
    </table>

